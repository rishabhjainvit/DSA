

// sum of the array on the basis of thier size

#include<iostream>
using namespace std;
int Array(int arr[],int n)
{
  int sum=0;
  for(int i= 0; i<n;i++){
    sum=sum+arr[i];
  }
  return sum;
}
int main()
{
  int arr[100];
  int size;
  cout<<"enter the size of array"<<endl;
  cin>>size;
  cout<<"enter the elements of array"<<endl;
  for(int i =0 ; i<size ; i++){
    cin>>arr[i];
  }
  cout<<"sum of array is"<<Array(arr,size)<<endl;
}
