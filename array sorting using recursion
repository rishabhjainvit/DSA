#include <iostream>
using namespace std;

bool Sorted(int arr[], int n){
  if(n==0 || n==1){
    return true;
  }
  if(arr[0]>arr[1]){
    return false;
  }
  else{
    bool remaingpart =  isSorted(arr+1, n-1);
    return remaingpart;
  }
}


int main(){
  int arr[5] ={2,4,6,8,9};
  int n=5;
  bool ans = isSorted(arr,n);
  if(ans){
    cout<<"array is sorrted"<<endl;
  }
  else{
    cout<,"array is not sorted "<<endl;
  }
  return 0;
}
